<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/widget_background"> <!-- 使用一个Drawable来实现圆角和背景色 -->

    <!-- 你可以在这里加一个标题，如果需要的话 -->
    <!-- <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="近期生日"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/> -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- 第一个生日信息 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="4dp">

            <TextView
                android:id="@+id/widget_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#E0E0E0"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="-" />

            <TextView
                android:id="@+id/widget_birthday_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#B0B0B0"
                android:layout_marginTop="2dp"
                android:text="-"/>

            <TextView
                android:id="@+id/widget_days_left_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:text="-"/>
        </LinearLayout>

        <!-- 第二个生日信息 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="4dp">

            <TextView
                android:id="@+id/widget_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#E0E0E0"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="-"/>

            <TextView
                android:id="@+id/widget_birthday_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#B0B0B0"
                android:layout_marginTop="2dp"
                android:text="-"/>

            <TextView
                android:id="@+id/widget_days_left_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:text="-"/>
        </LinearLayout>

        <!-- 第三个生日信息 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="4dp">

            <TextView
                android:id="@+id/widget_name_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#E0E0E0"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="-"/>

            <TextView
                android:id="@+id/widget_birthday_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#B0B0B0"
                android:layout_marginTop="2dp"
                android:text="-"/>

            <TextView
                android:id="@+id/widget_days_left_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:text="-"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
